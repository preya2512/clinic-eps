<%- include ("../header.ejs") %>

        <div class="add-container">
            <h2>ADD PRESCRIPTION</h2>
            
            <% user.forEach(function(user) { %>
                <form name="addPrescription" method="post" action="/addPrescription">
                    <input type="hidden" name="userid" value = "<%= user.UserID %>">
                    <div class="add-txt-field">
                        <label>Name</label>
                        <input type="text" id="first-name" name="name" value="<%= user.Name %>" disabled>
                        <span></span>
                    </div>
                    <div class="add-txt-field">
                        <label>Email</label>
                        <input type="text" id="email" name="email" value="<%= user.Email %>" disabled>
                        <span></span>
                    </div>
                    <div class="add-txt-field">
                        <label>Prescription</label>
                        <input type="text" id="prescription" name="prescription" value="" required>
                        <span></span>
                    </div>

                    <% if ( expressFlash.length > 0 ) { %>
                        <p id="flashMsg" class="success-msg"><%= expressFlash %> </p>
                    <% } %>
                    <input class="enter-button" id="savebutton" type="submit" value="Add Prescription">                    
                </form>
            <% }); %>

            
            <button class="enter-button" onclick="location.href = '/Doctor_SearchPatient'">Back</button>
        </div>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script>
        const mobileBtn = document.getElementById('mobile-cta')
            nav = document.querySelector('nav')
            mobileBtnExit = document.getElementById('mobile-exit');

        mobileBtn.addEventListener('click',() => {
            nav.classList.add('menu-btn');
        })

        mobileBtnExit.addEventListener('click',() => {
            nav.classList.remove('menu-btn');
        })
    </script>
</body>

</html>

