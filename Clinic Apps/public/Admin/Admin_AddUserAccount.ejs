<%- include ("../header.ejs") %>

        <div class="add-container">
            <h2>ADD USER ACCOUNT</h2>
            <form name="addUserAccount" method="post" action="/addUserAccount">
                <div class="add-txt-field">
                    <label>Username</label>
                    <input type="text" id="username" name="username" value = "tessttt" required>
                    <span></span>                
                </div>
                <div class="add-txt-field">
                    <label>Name</label>
                    <input type="text" id="fname" name="name" value = "tessttt" required>
                    <span></span>
                </div>
                <div class="add-txt-field">
                    <label>Password</label>
                    <input type="password" id="password" name="password" value = "tessttt" required>
                    <span></span>
                </div>
                <div class="add-txt-field">
                    <label>Confirm Password</label>
                    <input type="password" id="confirm-password" name="confirm-password" value = "tessttt" required>
                    <span></span>
                </div>    
                <div class="add-txt-field">
                    <label>Email</label>
                    <input type="text" id="email" name="email" value = "tessttt" required>
                    <span></span>
                </div> 
                <% if ( expressFlash.length > 0 ) { %>
                    <p id="flashMsg" class="error-msg"><%= expressFlash %> </p>
                    
                <% } %>
                <input class="enter-button" type="submit" value="Add User Account">
            </form>
            
            <button class="enter-button" onclick="location.href = '/AdminHome'">Back</button>
        </div>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    <script>
        const mobileBtn = document.getElementById('mobile-cta')
            nav = document.querySelector('nav')
            mobileBtnExit = document.getElementById('mobile-exit');

        mobileBtn.addEventListener('click',() => {
            nav.classList.add('menu-btn');
        })

        mobileBtnExit.addEventListener('click',() => {
            nav.classList.remove('menu-btn');
        })
    </script>
</body>

</html>

